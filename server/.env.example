# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_RATE_LIMIT_PER_MINUTE=1
OTP_RATE_LIMIT_PER_DAY=5

# MSG91 Configuration (India SMS)
MSG91_API_KEY="your-msg91-api-key"
MSG91_SENDER_ID="VYAAMK"
