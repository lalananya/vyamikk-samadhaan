{
  "info": {
    "name": "Vyaamikk Samadhaan Backend",
    "_postman_id": "c78f1a8c-4a61-4c9d-9f7a-000000000001",
    "description": "Auth flow and health checks for Vyaamikk Samadhaan backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Healthz",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/healthz",
          "host": ["{{baseUrl}}"],
          "path": ["healthz"]
        }
      }
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let data = pm.response.json();",
              "pm.environment.set('otpToken', data.otpToken || '');"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "Debug OTP (DEV only)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/__debug/otp/+919876543210",
          "host": ["{{baseUrl}}"],
          "path": ["__debug", "otp", "+919876543210"]
        }
      }
    },
    {
      "name": "Verify",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let data = pm.response.json();",
              "pm.environment.set('access', data.accessJwt || '');",
              "pm.environment.set('refresh', data.refreshJwt || '');"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"otpToken\": \"{{otpToken}}\",\n  \"code\": \"123456\",\n  \"device\": {\n    \"model\": \"OnePlus 12R\",\n    \"platform\": \"android\",\n    \"appVersion\": \"1.0.0\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/verify",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "verify"]
        }
      }
    },
    {
      "name": "Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "me"]
        }
      }
    },
    {
      "name": "Refresh",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let data = pm.response.json();",
              "pm.environment.set('access', data.accessJwt || '');",
              "pm.environment.set('refresh', data.refreshJwt || '');"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshJwt\": \"{{refresh}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/refresh",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "refresh"]
        }
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshJwt\": \"{{refresh}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/logout",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "logout"]
        }
      }
    }
  ],
  "variable": []
}
